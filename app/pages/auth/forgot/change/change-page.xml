<Page actionBarHidden="true" xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
	<FlexboxLayout height="100%" alignItems="center" flexDirection="column" justifyContent="center">
		<StackLayout width="283">
			<Image src="~/images/logomydoors.png" stretch="aspectFill" class="img-logo" />
			<Label textAlignment="center" class="m-b-30">
				<FormattedString>
					<Span class="md-title" text="Modifica password"/>
				</FormattedString>
			</Label>
			<TextField class="text-field" secure="true" returnKeyType="next" text="{{ password }}" hint="Nuova password" />
			<TextField class="text-field" secure="true" returnKeyType="done" text="{{ confirm }}" hint="Conferma password" />
			<Button class="md-btn" text="Modifica" tap="{{ onSubmit }}" />
			<Label text="oppure" textAlignment="center" />
			<Button class="md-btn" text="Accedi" tap="onTap" />
		</StackLayout>
	</FlexboxLayout>
</Page>
