<Page class="page page-custom"
    actionBarHidden="true"
    xmlns="http://www.nativescript.org/tns.xsd"
    xmlns:comps="components"
    xmlns:stripe="nativescript-stripe"
    navigatingTo="navigatingTo">
    <ScrollView>
    <StackLayout>
        <StackLayout orientation="horizontal" class="page-head">
            <comps:backbutton tap="goBack" />
        </StackLayout>
        <StackLayout >
            <stripe:CreditCardView id="card"/>
            <Button text="Submit" tap="submit" class="btn btn-primary"></Button>
        </StackLayout>
    </StackLayout>
    </ScrollView>
</Page>
